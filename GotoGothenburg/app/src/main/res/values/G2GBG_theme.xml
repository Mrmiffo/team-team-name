<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="white">#ffffff</color>
    <style name="G2GBG_theme" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:checkboxStyle">@style/checkboxStyle</item>
    </style>
    <style name="checkboxStyle">
        <item name="android:button">@drawable/check_box</item>
    </style>
    <style name="PreferenceListHeader" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/darkerBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bottom_border</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">-10dp</item>
    </style>
</resources>